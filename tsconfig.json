{
  "compilerOptions": {
    "target": "esnext",
    "module": "es6",
    "lib": ["dom", "es6", "dom.iterable", "scripthost"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*", "./*.ts"],
  "exclude": ["node_modules"]
}
